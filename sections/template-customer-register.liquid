<div class="flex items-center justify-center  text-black">
  <div class="w-full max-w-md p-8 rounded">
    <h2 class="text-3xl font-bold mb-6 text-center">Register</h2>

    {% form 'create_customer' %}
       <div class="mb-6">
        <label for="firstName" class="block mb-2 font-semibold">First Name</label>
        <input type="text" id="firstName" name="customer[first_name]" class="w-full p-2 mb-4 border-2 border-gray-300" required>
    
        <label for="lastName" class="block mb-2 font-semibold">Last Name</label>
          <input type="text" id="lastName" name="customer[last_name]" class="w-full p-2 mb-4 border-2 border-gray-300" required>
    
          <label for="email" class="block mb-2 font-semibold">Email address<span class="text-red-500">*</span></label>
          <input type="email" id="email" name="customer[email]" class="w-full p-2 mb-4 border-2 border-gray-300" required>
    
          <label for="password" class="block mb-2 font-semibold">Password<span class="text-red-500">*</span></label>
          <input type="password" id="password" name="customer[password]" class="w-full p-2 mb-4 border-2 border-gray-300" required>
    
          <p class="text-gray-400  text-justify  text-wrap">Your personal data will be used to support your experience thoughtout this website, to managed acess to your account, and for other purpose described in our <span class="font-semibold text-black" >privancy policy</span></span></p>
          <button type="submit" class="w-full text-white bg-black py-3 px-5 mt-5 font-semibold">REGISTER</button>

       </div>
      {% endform %}

    
   
    </form>

    <div class="text-center my-4 flex items-center">
      <div class="flex-1 border-t border-gray-400"></div>
      <span class="mx-4 text-black font-semibold">or</span>
      <div class="flex-1 border-t border-gray-400"></div>
    </div>

    <a href="{{ routes.account_login_url}}">
      <button class="w-full text-black py-3 px-5 border-2 font-semibold">Log<span class="ml-2">in</span></button>
    </a>
  </div>
</div>
