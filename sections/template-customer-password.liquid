<div class="flex items-center justify-center h-screen text-black">
  <div class="w-full max-w-md p-8 rounded">
    <h2 class="text-3xl font-bold mb-6 text-center">Forgot Password</h2>

    {% form 'recover_customer_password' %}
      <div class="mb-6">
        <label for="email" class="block mb-2 font-semibold">Email address<span class="text-red-500">*</span></label>
        <input type="email" id="email" name="email" class="w-full p-2 mb-4 border-2 border-gray-300" required>

        <div class="flex justify-between items-center">
          <button type="submit" class="w-1/2 text-white bg-black py-3 px-5 font-semibold">Submit</button>
          <a href="{{ routes.account_login_url }}" class="w-1/2 text-black py-3 px-5 border-2 font-semibold">Cancel</a>
        </div>
      </div>
    {% endform %}
  </div>
</div>
