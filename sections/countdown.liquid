{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}

<countdown-component
  data-timervalue="{{ section.settings.counter }}"
  data-hrsvalue="{{section.settings.expiry_hours}}"
  data-minvalue="{{section.settings.expiry_minutes}}">
  <div class="color-{{ section.settings.color_scheme }} page-width {% if settings.corners == 'rounded' %} rounded-lg overflow-hidden {%endif%} relative" id="demo">
    {% assign bg_image = section.settings.background_image %}
    {% if bg_image %}
      {% assign image_class = 'absolute inset-0 w-full h-full object-cover z-[0]' %}
      {% if settings.corners == 'rounded' %}
        {% assign image_class = image_class | append: ' rounded-md' %}
      {% endif %}
      {{ bg_image | image_url: width: bg_image.width | image_tag: class: image_class }}
    {% endif %}
    <div class=" section-{{ section.id }}-padding  relative z-[1]">

      <div class=" grid-gap grid grid-cols-1 md:grid-cols-2  ">
        <div class="flex flex-col">
          <h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
          <div class="rte">{{ section.settings.sub_heading }}</div>
          <div class="">
            <a href="{{ section.settings.button_url }}" class="button button-outline">
              {{ section.settings.button }}
            </a>
          </div>
        </div>

        <div class=" flex gap-4 justify-center items-center">
          <div class="text-center">
            <div class="circle days text-xl px-5  rounded-lg py-3 bg-white text-black text-center "></div>
            <span class="text-xl mt-2">DAY</span>
          </div>
          <div class="text-center">
            <div class="circle hours text-xl px-5 rounded-lg py-3 bg-white text-black "></div>
            <span class="text-xl mt-2">HOUR</span>
          </div>
          <div class="text-center">
            <div class="circle minutes text-xl px-5  rounded-lg py-3 bg-white text-black "></div>
            <span class="text-xl mt-2">MIN</span>
          </div>
          <div class="text-center">
            <div class="circle seconds text-xl px-5 rounded-lg py-3 bg-white text-black "></div>
            <span class="text-xl mt-2">SEC</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</countdown-component>


{% schema %}
  {
    "name": "Countdown",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "t:sections.newsletter.settings.background_image.label"
      },
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "t:sections.all.heading.heading",
        "default": "LIMITED OFFER"
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "t:sections.all.heading_size.label",
        "options": [
          {
            "value": "h3",
            "label": "t:sections.all.heading_size.options__1.label"
          }, {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__2.label"
          }, {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__3.label"
          }
        ],
        "default": "h2"
      },
      {
        "type": "richtext",
        "id": "sub_heading",
        "label": "t:sections.all.heading.sub_heading",
        "default": "<p>Share something about a limited offer or temporary promotion</p>"
      }, {
        "type": "text",
        "id": "counter",
        "label": "Expiry date",
        "default": "15-04-2024",
        "info": "DD-MM-YYYY"
      }, {
        "type": "range",
        "id": "expiry_hours",
        "label": "Expiry hours",
        "min": 0,
        "max": 23,
        "default": 0,
        "step": 1,
        "info": "Represents the hour in UTC standard time"
      }, {
        "type": "range",
        "id": "expiry_minutes",
        "label": "Expiry minutes",
        "min": 0,
        "max": 23,
        "default": 0,
        "step": 1
      }, {
        "type": "color_scheme",
        "label": "t:sections.all.colors.label",
        "id": "color_scheme",
        "default": "background-4"
      }, {
        "type": "text",
        "id": "button",
        "label": "Option Label",
        "default": "Option link"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Option Link"
      }, {
        "type": "range",
        "id": "padding_top",
        "label": "t:sections.all.padding.padding_top",
        "min": 0,
        "max": 100,
        "default": 50,
        "step": 1,
        "unit": "px"
      }, {
        "type": "range",
        "id": "padding_bottom",
        "label": "t:sections.all.padding.padding_bottom",
        "min": 0,
        "max": 100,
        "default": 50,
        "step": 1,
        "unit": "px"
      }
    ],

    "presets": [
      {
        "name": "Countdown"

      }
    ]
  }
{% endschema %}