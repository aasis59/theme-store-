<div class="w-full py-2 px-2">
    <div class="relative group">
        <a href="{{ product_product.url }}">
            {% if product_product.featured_image %}
            <div class="h-auto">
                <img class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform"
                    src="{{ product_product.featured_image | img_url: 'medium' }}"
                    alt="{{ product_product.featured_image.alt }}">
            </div>
            {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
        </a>

        <div class=" p-4 absolute bottom-0 left-[-30px]">
            <div>
                <a href="{{ product_product.url }}" class="text-2xl font-bold we sm:text-lg md:text-xl lg:text-2xl">
                    {{ product_product.title }}
                </a>
            </div>

            <div class=" mt-4 text-lg font-bold text-gray-800 sm:text-base md:text-lg">
                {{ product_product.price | money }}
            </div>
        </div>
        <div class="absolute bottom-0 left-[40%]">
            <form action="/cart/add" method="post">
                <input type="hidden" name="id" value="{{ product_product.id }}">
                <button type="submit"
                    class="bg-gray-800 text-white px-4 py-2 rounded-md sm:px-2 sm:py-1 md:px-3 md:py-1.5 lg:px-4 lg:py-2 xl:px-5 xl:py-2.5">
                    Add to Cart
                </button>
                <div>
                    
                </div>
            </form>
        </div>


    </div>
</div>

<style>
    .we {
        text-decoration: none;
        position: relative;
        transition: color 0.7s;
    }

    .we::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -3px;
        height: 1px;
        width: 0;
        background-color: black;
        transition: width 0.7s;
    }

    .group:hover .we::after {
        width: 100%;
    }

    .group:hover .we {
        color: black;
    }
</style>