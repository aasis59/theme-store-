          }
        },
        "phone": {
          "type": "phone_number",
          "settings": {
            "phone": "Phone Number",
            "required": false,
            "block_width": "half_width"
          }
        },
        "email": {
          "type": "email",
          "settings": {
            "email": "Email",
            "required": true,
